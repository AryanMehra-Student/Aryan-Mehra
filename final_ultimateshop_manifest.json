{
    "manifest_version": 3,
    "name": "UltimateShop Checker",
    "version": "1.0",
    "description": "Complete UltimateShop Account Checker with Balance Capture",
    "content_scripts": [
        {
            "matches": ["*://*.ultimateshop.vc/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["cookies", "tabs"],
    "host_permissions": ["http://localhost:5050/*", "*://*.ultimateshop.vc/*"]
}