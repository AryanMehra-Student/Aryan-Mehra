{
    "manifest_version": 3,
    "name": "VClub Auto-Login",
    "version": "1.0",
    "description": "Automates navigation and login on vclub.one with human-like behavior",
    "content_scripts": [
        {
            "matches": ["*://*.vclub.one/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["cookies", "tabs"],
    "host_permissions": ["http://localhost:5050/*", "*://*.vclub.one/*"]
}